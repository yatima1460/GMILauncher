{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run LÃ–VE",
            "type": "shell",
            "osx": {
                "command": "/Applications/love.app/Contents/MacOS/love",
                "args": [
                    "${workspaceFolder}",
                    "--console"
                ]
            },
            "windows": {
                "command": "C:\\Program Files\\LOVE\\love.exe",
                "args": [
                    "${workspaceFolder}",
                    "--console"
                ]
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Build GMILauncher",
            "type": "shell",
            "windows": {
                "command": "powershell",
                "args": [
                    "-ExecutionPolicy",
                    "Bypass",
                    "-File",
                    "${workspaceFolder}\\build.ps1"
                ]
            },
            "osx": {
                "command": "pwsh",
                "args": [
                    "-ExecutionPolicy",
                    "Bypass",
                    "-File",
                    "${workspaceFolder}/build.ps1"
                ]
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "Run dist GMILauncher",
            "type": "shell",
            "windows": {
                "command": "${workspaceFolder}\\dist\\GMILauncher.exe",
                "args": [
                    "--console"
                ]
            },
            "osx": {
                "command": "wine",
                "args": [
                    "${workspaceFolder}/dist/GMILauncher.exe",
                ]
            },
            "presentation": {
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": []
        }
    ]
}